. @RPMCONFIGDIR@/functions
ValidateBuildRoot

cd "$RPM_BUILD_ROOT"

for f in @RPMCONFIGDIR@/brp.d/[0-9][0-9][0-9]-*.brp; do
    # Run existing files with executable bit
    [ -f "$f" -a -x "$f" ] || continue

    "$f"
done
